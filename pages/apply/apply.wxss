/* pages/apply/apply.wxss */

.name {
  font-size: 20rpx;
  color: #ccc;
}

.get_input {
  width: 350rpx;
  border: 1rpx solid #f5f5f5;
  border-radius: 10rpx;
  margin-left: 30rpx;
  padding-left: 20rpx;
  align-self: center;
}

.all_name {
  font-size: 26rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 60rpx;
  line-height: 60rpx;
}

.man {
  font-size: 22rpx;
  color: #333;
  border: 1rpx solid #ccc;
  height: 50rpx;
  width: 50rpx;
  text-align: center;
  border-radius: 10rpx;
  line-height: 50rpx;
  align-self: center;
  margin-left: 50rpx;
}

.woman {
  font-size: 22rpx;
  background-color: aquamarine;
  height: 55rpx;
  width: 55rpx;
  text-align: center;
  border-radius: 10rpx;
  line-height: 50rpx;
  align-self: center;
  margin-left: 50rpx;
  color: #fff;
}

/*来自  */

.come {
  margin-top: 26rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
}

.city {
  margin-left: 30rpx;
}

.school {
  margin-top: 26rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  height: 55rpx;
  line-height: 55rpx;
  width: 100%;
}

.school .name {
  font-size: 20rpx;
  color: #ccc;
}

.school .Sname {
  border: 1rpx solid #f5f5f5;
  margin-left: 30rpx;
  padding-left: 20rpx;
  border-radius: 10rpx;
  width: 400rpx;
}

.remarks {
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  width: 100%;
  height: 200rpx;
}

.get_remark {
  font-size: 22rpx;
  color: #ccc;
}

.idea {
  margin-left: 30rpx;
  margin-top: 26rpx;
  height: 150rpx;
  width: 390rpx;
  border: 1rpx solid #f5f5f5;
  border-radius: 10rpx;
  padding: 15rpx;
}

.Re_idea {
  align-self: center;
}

.all {
  width: 90%;
  margin-left: 5%;
}

.submit {
  font-size: 24rpx;
  color: #fff;
  background-color: blueviolet;
  width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-left: 25%;
  margin-top: 100rpx;
}
